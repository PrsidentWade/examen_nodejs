<script>
    const searchInput = document.getElementById("searchInput");
    searchInput.addEventListener("keyup", function () {
        const filter = searchInput.value.toLowerCase();
        const rows = document.querySelectorAll("tbody tr");

        rows.forEach(row => {
            const text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? "" : "none";
        });
    });

    // √âcouter l'√©v√©nement d'ouverture du modal de modification
    document.getElementById('editModal').addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const id = button.getAttribute('data-id');
        const matricule = button.getAttribute('data-matricule');
        const nom = button.getAttribute('data-nom');
        const prenom = button.getAttribute('data-prenom');
        const datenaissance = button.getAttribute('data-datenaissance');
        const filiere = button.getAttribute('data-filiere');
        const universite = button.getAttribute('data-universite');
        const adresse = button.getAttribute('data-adresse');
        const sexe = button.getAttribute('data-sexe');
        const nationalite = button.getAttribute('data-nationalite');

        document.getElementById('editId').value = id;
        document.getElementById('editMatricule').value = matricule;
        document.getElementById('editNom').value = nom;
        document.getElementById('editPrenom').value = prenom;
        document.getElementById('editDatenaissance').value = datenaissance;
        document.getElementById('editFiliere').value = filiere;
        document.getElementById('editUniversite').value = universite;
        document.getElementById('editAdresse').value = adresse;
        document.getElementById('editSexe').value = sexe;
        document.getElementById('editNationalite').value = nationalite;

        // Mettre √† jour l'action du formulaire
        document.getElementById('editForm').action = `/edit/${id}`;
    });

    // √âcouter l'√©v√©nement d'ouverture du modal de suppression
    document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const id = button.getAttribute('data-id');
        const nom = button.getAttribute('data-nom');
        const prenom = button.getAttribute('data-prenom');
        const matricule = button.getAttribute('data-matricule');

        // Mettre √† jour les informations dans le modal
        document.getElementById('deleteStudentName').textContent = `${prenom} ${nom}`;
        document.getElementById('deleteStudentMatricule').textContent = matricule;

        // Mettre √† jour l'action du formulaire de suppression
        document.getElementById('deleteForm').action = `/delete/${id}`;
    });

    // Sidebar toggle functionality
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    function toggleSidebar() {
        sidebar.classList.toggle('show');
        mainContent.classList.toggle('sidebar-open');
        sidebarOverlay.classList.toggle('show');
    }

    sidebarToggle.addEventListener('click', toggleSidebar);
    sidebarOverlay.addEventListener('click', toggleSidebar);

    // Close sidebar when clicking on sidebar links (mobile)
    document.querySelectorAll('.sidebar-nav-link').forEach(link => {
        link.addEventListener('click', () => {
            if (window.innerWidth <= 768) {
                toggleSidebar();
            }
        });
    });

    // Handle window resize
    window.addEventListener('resize', () => {
        if (window.innerWidth > 768) {
            sidebar.classList.remove('show');
            mainContent.classList.remove('sidebar-open');
            sidebarOverlay.classList.remove('show');
        }
    });
</script>


