        .sidebar-nav-link {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .sidebar-nav-link:hover {
            background: var(--sidebar-hover);
            color: white;
            text-decoration: none;
        }

        .sidebar-nav-link.active {
            background: var(--primary-color);
            color: white;
        }

        .sidebar-nav-link i {
